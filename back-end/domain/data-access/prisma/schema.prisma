generator client {
provider = "prisma-client-js"
}

datasource db {
provider = "postgresql"
url = env( "DATABASE_URL")
}

model User {
    id Int @id @default(autoincrement())
    name String
    specialisation String
    email String  @unique
    password String
    role String
    teams Team[]
}

model Team {
    id Int @id @default(autoincrement())
    name String @unique
    users User[]
    projects Project[]
}

model Project {
    id      Int     @id @default(autoincrement())
    name    String
    team    Team?    @relation(fields: [teamId], references: [id], onDelete: Cascade, onUpdate: Cascade)
    teamId  Int?
    tasks   Task[]
}

model Task {
    id          Int     @id @default(autoincrement())
    name        String
    description String
    deadline    DateTime
    completed   Boolean

    project     Project? @relation(fields: [projectId], references: [id], onDelete: Cascade, onUpdate: Cascade)
    projectId   Int?

}